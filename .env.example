# ============================================
# DEVPATH ENVIRONMENT VARIABLES - EXAMPLE
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# Adzuna API Credentials
# ============================================
VITE_ADZUNA_APP_ID=your_adzuna_app_id
VITE_ADZUNA_APP_KEY=your_adzuna_app_key

# ============================================
# Firebase Configuration
# ============================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ============================================
# FastAPI Backend URL
# ============================================
# For local development: http://localhost:8000
# For production (Render/Railway/etc): https://your-backend-url.com
VITE_API_URL=http://localhost:8000

# ============================================
# Development Settings (Optional)
# ============================================
# Uncomment to use Firebase Emulators for local testing
# VITE_USE_FIREBASE_EMULATOR=true
# VITE_FUNCTIONS_EMULATOR_PORT=5001
# VITE_FIRESTORE_EMULATOR_PORT=8080
# VITE_AUTH_EMULATOR_PORT=9099

# ============================================
# Email Service Configuration (Optional)
# ============================================
# These are only needed if you're using EmailJS instead of Firebase Functions
# VITE_EMAILJS_SERVICE_ID=your_service_id
# VITE_EMAILJS_TEMPLATE_ID=your_template_id
# VITE_EMAILJS_PUBLIC_KEY=your_public_key
